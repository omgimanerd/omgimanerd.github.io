extends layout.pug

block body
  div(class='col s12 center-align blue-grey lighten-3 notes-container')
    h2 Notes

    div(class='row center-align')
      div(class='col s12 m12 l6 offset-l3')
        ul(class='collapsible left-align notes' data-collapsible='expandable')
          each pdfs,section in notes
            li
              div(class='collapsible-header')
                =section
              div(class='collapsible-body')
                div(class='collection')
                  each pdf in pdfs
                    a(class='collection-item' href=pdf target='_blank')
                      =pdf

block scripts
  if devMode
    script(src='/public/js/notes.js')
  else
    script(src='/public/dist/notes.min.js')
